<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<PreferenceCategory
	android:title="@string/preferencesActivity">
		<EditTextPreference android:title="@string/preferencesUsername"
							android:summary="@string/preferencesUsernameDesc"
							android:key="prefs_userName">
		</EditTextPreference>
	
		<CheckBoxPreference android:title="@string/preferencesUserAutoLogin"
							android:summary="@string/preferencesUserAutoLoginDesc"
							android:key="prefs_autoLogin">
		</CheckBoxPreference>
	</PreferenceCategory>
	
	<PreferenceCategory
	android:title="@string/preferencesServiceTitle">
		<CheckBoxPreference android:title="@string/preferencesServiceNetwork"
							android:summary="@string/preferencesServiceNetworkDesc"
							android:key="prefs_networkServiceKeepAlive">
		</CheckBoxPreference>
	</PreferenceCategory>
	
	
	<PreferenceCategory
	android:title="Options de dev">
		<EditTextPreference android:title="Port entrant"
		    				android:numeric="integer"
							android:summary="(Dev) Port entrant"
							android:key="dev_prefs_port_entrant">
		</EditTextPreference>
		<EditTextPreference android:title="Port sortant"
		    				android:numeric="integer"
							android:summary="(Dev) Port sortant"
							android:key="dev_prefs_port_sortant">
		</EditTextPreference>
		<CheckBoxPreference android:title="Emulateur"
							android:summary="Utiliser 127.0.0.1"
							android:key="dev_prefs_emulateur">
		</CheckBoxPreference>
	</PreferenceCategory>
    
</PreferenceScreen>
